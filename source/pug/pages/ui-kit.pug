extends ../components/base/layout

block variables
  - const title = "UI-kit"

block main
  style
    include ../../sass/inline/uikit.css
    include ../../sass/inline/prism.css

  main
    .uikit
      //----------------------- Разделы с компонентами
      .uikit__sections(data-scroll-lock-fill-gap)
        label(for="section-burger")
          span Разделы&nbsp;компонентов
        input.visually-hidden(type="checkbox", checked, id="section-burger")
        div
          ul
            li
              a(href="#buttons") Кнопки
            li
              a(href="#ticker") Бегущая строка
            li
              a(href="#sliders") Карусель

      //----------------------------------------------
      .container
        a.uikit__header-link(href="sitemap.html")
          +icon("logo", 300, 150)
        h1.uikit__h1 Компоненты, используемые на проекте

        section.uikit__section
          h2.uikit__h2 Название компонента или группы компонентов
          p.uikit__text Информация о компоненте (подсказки \ предупреждение \ важная информация)
          .uikit__component
            p.uikit__text  Класс компонента \ модификаторы
            pre
              |
              code(class="language-pug").
                p Пример кода

        //- Кнопки
        section.uikit__section(id="buttons")
          h2.uikit__h2 Кнопки
          .uikit__component
            p.uikit__text.uikit__text--class .btn \ default \ button
            +btn({text: "Кнопка"})
            pre
              |
              code(class="language-pug").
                +btn({text: "Текст", href: "#"})
          .uikit__component
            p.uikit__text.uikit__text--class .btn \ .btn--black \ link
            +btn({text: "Текст", href: "#", isExternal: true}).btn--black.btn--radius-66(aria-label="Просто ссылка")
            pre
              |
              code(class="language-pug").
                +btn({text: "Текст", href: "#", isExternal: true})(aria-label="Просто ссылка").btn--black.btn--radius-66
          .uikit__component
            p.uikit__text.uikit__text--class .btn \ .btn--transparent \ link
            +btn({text: "Текст", href: "#", isExternal: true}).btn--transparent.btn--radius-66(aria-label="Просто ссылка")
            pre
              |
              code(class="language-pug").
                +btn({text: "Текст", href: "#", isExternal: true})(aria-label="Просто ссылка").btn--transparent.btn--radius-66
          .uikit__component
            p.uikit__text.uikit__text--class .btn \ .btn--blue \ link
            +btn({text: "Текст", href: "#", isExternal: true}).btn--blue.btn--radius-62(aria-label="Просто ссылка")
            pre
              |
              code(class="language-pug").
                +btn({text: "Текст", href: "#", isExternal: true})(aria-label="Просто ссылка").btn--blue.btn--radius-62
          .uikit__component
            p.uikit__text.uikit__text--class .btn \ .btn--icon \ link
            +btn({iconName: "arrow-right", iconWidth: "17", iconHeight: "9"}).btn--icon.btn--radius-50(aria-label="Кнопк с svg")
            pre
              |
              code(class="language-pug").
                +btn({iconName: "arrow-right", iconWidth: "17", iconHeight: "9"}).btn--icon.btn--radius-50(aria-label="Кнопк с svg")
          .uikit__component
            p.uikit__text.uikit__text--class .btn \ disabled \ button
            +btn({iconName: "arrow-right", iconWidth: "17", iconHeight: "9"}).btn--icon.btn--radius-50(aria-label="Кнопк с svg" disabled)
            pre
              |
              code(class="language-pug").
                +btn({iconName: "arrow-right", iconWidth: "17", iconHeight: "9"}).btn--icon.btn--radius-50(aria-label="Кнопк с svg")(disabled)

        //- Бегущая строка
        section.uikit__section(id="ticker")
          h2.uikit__h2 Бегущая строка
          .uikit__component
            p.uikit__text.uikit__text--class Бегущая строка
            +ticker()
            pre
              |
              code(class="language-pug").
                +ticker()

        //- Карусель
        section.uikit__section(id="sliders")
          h2.uikit__h2 Карусель
          .uikit__component
            p.uikit__text.uikit__text--class Карусель с участниками
            +slider(slider.users, "users")
            pre
              |
              code(class="language-pug").
                +slider(slider.users, "users")


  script
    include ../../js/inline/ui-kit.js

